
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3 text-center">
      <h1>New Food Tour</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
      <%= simple_form_for @food_tour do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :city %>

        <%= f.input :capacity %>

        <%= f.input :location %>

        <%= f.input :price %>
        <div class="form-group integer optional food_tour_capacity">
          <label class="control-label integer optional" for="dates">Availability Dates</label>
          <%= text_field_tag :dates, nil, class: 'datepicker-range' %>
        </div>
        <%= f.input :cuisine %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>

