<!-- banner -->

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/berlin');">
  <div class="banner-content">
    <h1>Welcome to Devour food tours</h1>
    <p>
      <span id="banner-typed-text"></span>
    </p>
    <%= form_tag(food_tours_path, method: :get, :class => 'form-inline') do %>
      <%= text_field_tag :q, nil, class: 'form-control search-style' %>
      <%= submit_tag 'Search', class: 'btn btn-primary search-button' %>
    <% end %>
    <!-- <a class="btn btn-primary btn-lg">Start now</a> -->
  </div>
</div>



